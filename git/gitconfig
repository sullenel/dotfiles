[user]
        name = sullenel
	email = sullenel@users.noreply.github.com
[core]
	editor = nvim
	autocrlf = input
        safecrlf = true
        pager = less -R
[color]
        ui = always
[help]
        autocorrect = 1
[alias]
        pl = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        st = status
        rb = rebase
        ci = commit
        co = checkout
        cb = checkout -b
        dw = diff --color-word
        dt = difftool
	dc = diff --cached
	br = branch
	ap = add --patch
	lol = log --format=oneline
	cc = rev-list --all --count
	cll = config --list --local
	cia = commit --amend
	cian = commit --amend --no-edit
	mdr = merge --no-commit --no-ff
	pom = push -u origin master
	clg = config --list --global
	rs = restore --staged
	rrb = push origin --delete
[merge]
        tool = vimdiff
[push]
        default = simple
[diff]
        tool = vimdiff
[difftool]
        prompt = false
[pull]
	rebase = false
[init]
	defaultBranch = master
[credential]
	helper = store
