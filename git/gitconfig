[core]
        editor = vim
	autocrlf = false
        safecrlf = true
        pager = less -R
[color]
        ui = always
[help]
        autocorrect = 1
[alias]
        pl = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        st = status
        rb = rebase
        ci = commit
        co = checkout
        cob = checkout -b
        dw = diff --word-diff
        dt = difftool
	dc = diff --cached
	br = branch
	ca = commit --amend
	ap = add --patch
	lol = log --format=oneline
[merge]
        tool = vimdiff
[push]
        default = simple
[diff]
        tool = vimdiff
[difftool]
        prompt = false
