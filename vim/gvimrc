" -----------------------------------------------------------------------------
" GENERAL
" -----------------------------------------------------------------------------
  " Full mouse support
  set mouse=a
" -----------------------------------------------------------------------------


" -----------------------------------------------------------------------------
" APPEARANCE
" -----------------------------------------------------------------------------
  " Font
  set guifont=Sudo\ 14

  " Colorscheme
  colorscheme random
" -----------------------------------------------------------------------------


" -----------------------------------------------------------------------------
" GUI
" -----------------------------------------------------------------------------
  set guioptions+=c
  set guioptions-=r
  set guioptions-=R
  set guioptions-=l
  set guioptions-=L
  set guioptions-=T
  set guioptions-=b
  set guioptions-=m
  set guitablabel=%M\ %t
  set winaltkeys=no
" -----------------------------------------------------------------------------
