" GENERAL
" -----------------------------------------------------------------------------
  " Full mouse support
  set mouse=a
" -----------------------------------------------------------------------------


" -----------------------------------------------------------------------------
" APPEARANCE
" -----------------------------------------------------------------------------
  " Font
  " set guifont=PragmataPro\ 12
  set guifont=Consola\ Mono\ 11

  " Add some space between rows
  set linespace=2

  " Colorscheme
  colorscheme molokai
" -----------------------------------------------------------------------------


" -----------------------------------------------------------------------------
" GUI
" -----------------------------------------------------------------------------
  set guioptions+=c
  set guioptions-=r
  set guioptions-=R
  set guioptions-=l
  set guioptions-=L
  set guioptions-=T
  set guioptions-=b
  set guioptions-=m
  set guitablabel=%M\ %t
  set winaltkeys=no
