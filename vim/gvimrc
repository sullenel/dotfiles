" -----------------------------------------------------------------------------
" GENERAL
" -----------------------------------------------------------------------------
  " Full mouse support
  set mouse=a
" -----------------------------------------------------------------------------


" -----------------------------------------------------------------------------
" APPEARANCE
" -----------------------------------------------------------------------------
  " Font
  set guifont=Inconsolata\ XL\ Medium\ 11

  " Add some space between rows
  set linespace=1

  " Colorscheme
  colorscheme hybrid
" -----------------------------------------------------------------------------


" -----------------------------------------------------------------------------
" GUI
" -----------------------------------------------------------------------------
  set guioptions+=c
  set guioptions-=r
  set guioptions-=R
  set guioptions-=l
  set guioptions-=L
  set guioptions-=T
  set guioptions-=b
  set guioptions-=m
  set guitablabel=%M\ %t
  set winaltkeys=no
" -----------------------------------------------------------------------------
